<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.DeletePostFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <EditText
                android:id="@+id/delete_post_id_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/post_id"
                app:layout_constraintVertical_bias=".4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="50dp"
                android:inputType="text"
                android:importantForAutofill="no" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/admin_delete_post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/mid_red"
                android:text="@string/delete_post"
                app:layout_constraintTop_toBottomOf="@id/delete_post_id_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>