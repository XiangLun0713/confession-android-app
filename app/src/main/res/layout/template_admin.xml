<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

        <ImageView
                android:id="@+id/admin_member_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_icon_24"
                android:contentDescription="@string/admin_icon" />

        <TextView
                android:id="@+id/admin_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/admin_member_icon"
                android:layout_alignBottom="@+id/admin_member_icon"
                android:layout_toEndOf="@+id/admin_member_icon"
                android:paddingHorizontal="10dp"
                android:text="@string/dev"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="-1dp"
                android:layout_alignParentEnd="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>